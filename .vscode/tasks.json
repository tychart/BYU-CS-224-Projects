{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },

        {
            "label": "Run Comprun.sh",
            "type": "shell",
            "command": "./comprun.sh",
            "args": [
                "${file}"
            ]
        },
        {
            "label": "Compile the Current C File",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Executable With Custom Args",
            "type": "shell",
            "group": {
                "kind": "test"
            },
            "command": "",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}",
                "fifteen",
                "myxxdcomprun.sh"
            ],
            "dependsOn": "Comple the Current C File",
            
        },

        
    ],
    "version": "2.0.0"
}